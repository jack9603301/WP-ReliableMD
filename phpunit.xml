<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
  bootstrap="tests/bootstrap.php"
  backupStaticAttributes="false"
  colors="true"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  processIsolation="false"
  stopOnFailure="false">
  <testsuites>
    <testsuite name="Plugin Test Suite">
      <directory prefix="test." suffix=".php">tests/wordpress</directory>
      <directory prefix="test." suffix=".php">tests/</directory>
      <directory prefix="test." suffix=".php">tests/WP-ReliableMD</directory>
    </testsuite>
  </testsuites>
  <logging>
    <log type="coverage-html" target="tests/code_coverage"/>
    <log type="coverage-clover" target="tests/code_coverage/clover.xml"/>
    <log type="junit" target="tests/code_coverage/phpunit.xml" />
  </logging>
  <filter>
    <whitelist>
      <directory>src</directory>
    </whitelist>
  </filter>
</phpunit>
